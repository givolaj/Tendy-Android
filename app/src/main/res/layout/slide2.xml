<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/slide2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:paddingBottom="@dimen/slide_bottom_padding"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="@dimen/slide_text_padding"
            android:paddingRight="@dimen/slide_text_padding"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/slide2title"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="@dimen/slide_dash_margin"
            android:background="@color/green"
            android:layout_gravity="center"
            android:layout_width="@dimen/slide_underline_length"
            android:layout_height="5dp">
        </LinearLayout>

        <TextView
            android:paddingLeft="@dimen/slide_text_padding"
            android:paddingRight="@dimen/slide_text_padding"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|top"
            android:text="@string/slide2text"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/slide_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>